@import "variables";
@import "compatibility";
@import "util";

// ## 文字效果

//
// 文字浮凸效果
$embossed-text() {
  if arguments[1] {
    color: arguments[1];
  } else if arguments[0] {
    color: lighten(arguments[0], 3);
  }
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5), 0 -1px 0 rgba(255, 255, 255, 0.5);
}

//
// 文字下陷效果
$debossed-text() {
  if arguments[1] {
    val = darken(arguments[1], 3);
    color: rgba(red(val), green(val), blue(val), 0.8);
  } else if arguments[0] {
    val = darken(arguments[0], 3);
    color: rgba(red(val), green(val), blue(val), 0.8);
  }
  text-shadow: 0 1px 1px arguments[0], 0 0 0 #000, 0 1px 0 rgba(255, 255, 255, 0.8);
}

//
// 3D文本效果

$stereo-text() {
  color: arguments;
  text-shadow: 0 1px 0 arguments - #272727 \,
  0 2px 0 arguments - #303030 \,
  0 3px 0 arguments - #393939 \,
  0 4px 0 arguments - #424242 \,
  0 5px 0 arguments - #5b5b5b \,
  0 6px 1px rgba(0, 0, 0, 0.1) \,
  0 0 5px rgba(0, 0, 0, 0.1) \,
  1px 1px 3px rgba(0, 0, 0, 0.3) \,
  3px 3px 5px rgba(0, 0, 0, 0.2) \,
  5px 5px 10px rgba(0, 0, 0, 0.25) \,
  0 10px 10px rgba(0, 0, 0, 0.2) \,
  0 20px 20px rgba(0, 0, 0, 0.15);
}

//
// 文本发光效果

$glow-text(){
  if arguments[1] {
    text-shadow: 0 0 arguments[1] arguments[0];
  }else if arguments[0]{
    if typeof(arguments[0]) is 'unit'{
      text-shadow: 0 0 arguments[0];
    }else{
      text-shadow: 0 0 5px arguments[0];
    }
  }else{
    text-shadow: 0 0 5px;
  }
}

//
// 文本模糊效果

$blurry-text(color, radius= 0.15em) {
    color: transparent;
    text-shadow: 0 0 radius color;
    // 0.1px of spread distance made the shadow visible under IE10
    text-shadow: 0 0 radius 0.1px color;
}