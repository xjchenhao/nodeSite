extends ../../layout/admin

block content
    .row.text-left.m_t_50
        .col-sm-12.col-md-8
            form.form-horizontal#passwordForm(method="POST",action="/admin/system/password")
                .form-group
                    label.col-sm-4.control-label(for='passwordOld') 原密码
                    .col-sm-8
                        input#passwordOld.form-control(type='password',name='passwordOld')
                .form-group
                    label.col-sm-4.control-label(for='passwordNew1') 新密码
                    .col-sm-8
                        input#passwordNew1.form-control(type='password',name='passwordNew1')
                .form-group
                    label.col-sm-4.control-label(for='passwordNew2') 再次输入新密码
                    .col-sm-8
                        input#passwordNew2.form-control(type='password',name='passwordNew2')
                .form-group
                    .col-sm-offset-4.col-sm-8
                        a.btn.btn-default#submitBtn 确认
block script
    script.
        require(['page/password']);