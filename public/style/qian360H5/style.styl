@import 'qst/all'
@import 'config'

$default-font-size = 17.77777778px;

//--------------------------------------------------------【主页】
//主页底部导航
#pageHome, #pageProList, #pageUser, #pageMore {
  margin-bottom: $rem(100px);
}

#homeNavbar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  .viewport {
    height: $rem(98px);
    border-top: 1px solid #e0e0e0;
    background-color: #fff;
  }
  ul {
    display: table;
    width: 100%;
    height: 100%;
    table-layout: fixed;
  }
  li {
    display: table-cell;
    text-align: center;
    vertical-align: middle;
    a {
      display: block;
      color: $ui-font-color-gray-neutral
    }
    .icon {
      display: inline-block;
      font-size: $rem(45px);
      margin: $rem(10px 0);
    }
    span {
      display: block;
      font-size: $rem(22px);
      line-height: 1
    }
    &.on a {
      color: #f75555;
    }
  }
}

//钱庄首页
#pageHome {
  .slide-con {
    position: relative;
    overflow: hidden;
    font-size: 0;
    line-height: 0;
    width 100%
    height $rem(boxheight = 280px)
    ul {
      position: absolute
      width 100%
      height 100%
      li {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2
        overflow: hidden;
        width: 100%;
        text-align: center;
        -webkit-transform-style: preserve-3d;
        transform-style: preserve-3d;
        background url("../../image/common/banner-default.png") no-repeat center top
        background-size $rem(640px auto);
      }
      a {
        display: block
      }
      img {
        width: 100%;
        height: $rem(boxheight)
      }
    }
    ol {
      position: absolute;
      z-index: 3;
      right: 0;
      bottom: $rem(16px);
      width: 100%;
      text-align: center;
      li {
        display: inline-block;
        width: $rem(15x);
        height: $rem(15x);
        margin-right: $rem(7px);
        border-radius: 100%;
        background-color: rgba(255, 255, 255, .6)
        &.on {
          background-color: rgba(255, 255, 255, 1)
        }
      }
    }
  }
  .product-con {
    position: relative
    margin: $rem(40px 30px 0);
    padding-bottom: $rem(30px);
    text-align: center
    .tit {
      font-size: $rem(32px);
      color: #333
    }
    .cont {
      margin-top: $rem(30px)
    }
    .main {
      width: $rem(300px);
      height: $rem(300px);
      margin: 0 auto
      overflow: hidden
      background no-repeat center center
      background-size contain
      .tits {
        margin-top: $rem(50px);
        font-size: $rem(26px);
        color: #666
      }
      .conts {
        margin-top: $rem(30px);
        font-size: $rem(80px);
        color: $ui-global-color-main
        display: inline-block;
        border-bottom 1px solid #ccc
        padding-bottom: $rem(25px);
        small {
          font-size: $rem(30px);
        }
      }
      .time {
        margin-top: $rem(20px);
        font-size: $rem(28px);
        color: #666
      }
      .reward {
        margin: $rem(-5px auto -20px);
        width: 80%
        text-align: center
        font-size: $rem(24px);
        color: $ui-global-color-main
        $browser-prefix('transform', translateY(-50%))
        background-color #fff
        span {
          font-size: $rem(35px);
        }
      }
    }
    .info {
      margin-top: $rem(20px);
      font-size: $rem(28px);
      color: #666
      display: table;
      width: 100%;
      table-layout: fixed;
      li {
        display: table-cell;
        text-align: center;
        vertical-align: middle;
        &:nth-child(1) {
          padding-right: $rem(40px);
          text-align: right
        }
        &:nth-child(2) {
          border-left: 1px solid #ccc
          padding-left: $rem(40px);
          text-align: left
        }
      }
    }
    .operation {
      margin-top: $rem(20px);
      .ui-btn {
        display: block
        font-size: $rem(32px);
        line-height: $rem(80px);
      }
    }
    .tips {
      margin-top: $rem(25px);
      font-size: $rem(22px);
      color: #999
      .icon {
        display: inline-block
        font-size: $rem(35px);
        color: #6eb92b
      }
    }
    .mark {
      position: absolute
      right: $rem(10px);
      top: 0;
      span {
        position: absolute
        width: $rem(70px);
        right: $rem(-10px);
        top: $rem(15px);
        text-align: center
        z-index: 1
        -webkit-transform: rotate(45deg);
        transform: rotate(45deg);
        color: #fff
        font-size: $rem(22px);
      }
      .icon-pro-mark {
        position: absolute
        right: 0
        top: 0
        font-size: $rem(70px);
        &.red {
          color: #f35343
        }
        &.orange {
          color: #ff8100
        }
        &.green {
          color: #6eb92b
        }
      }
    }
  }
}

//产品列表
#pageProList {
  .banner {
    height: $rem(85px);
    border-bottom: 1px solid #ccc
    a {
      display: block
    }
    img {
      width: 100%
    }
  }
  .list {
    li {
      position: relative
      $box-sizing(border-box)
      padding: $rem(35px 10px 35px 175px);
      height: $rem(185px);
      border-bottom 1px solid #eee
      .tit {
        font-size: $rem(28px);
        color: #333
        .tag {
          font-size: $rem(18px);
          padding: $rem(3px 5px);
          margin-left: $rem(15px);
          border-radius $rem(5px)
          vertical-align: middle
          &.red {
            color: #f75555
            border: 1px solid #f75555
          }
        }
      }
      .cont {
        margin-top: $rem(10px);
        .tits {
          font-size: $rem(22px);
          color: #999
        }
        .conts {
          display: inline-block
          font-size: $rem(36px);
          margin-left: $rem(15px);
          color: $ui-global-color-main
          small {
            font-size: $rem(28px);
          }
        }
        .info {
          margin-top: $rem(20px);
          font-size: $rem(20px);
          color: #999
          line-height: $rem(30px);
          span {
            color: #333
          }
          .divider {
            display: inline-block
            width: 1px
            height: $rem(30px);
            background-color: #ccc
            vertical-align: bottom
            margin: $rem(0 15px);
          }
        }
      }
      .mark {
        position: absolute
        right: $rem(10px);
        top: $rem(10px);
        span {
          position: absolute
          width: $rem(70px);
          right: $rem(-10px);
          top: $rem(15px);
          text-align: center
          z-index: 1
          -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
          color: #fff
          font-size: $rem(22px);
        }
        .icon-pro-mark {
          position: absolute
          right: 0
          top: 0
          font-size: $rem(70px);
          &.red {
            color: #f35343
          }
          &.orange {
            color: #ff8100
          }
          &.green {
            color: #6eb92b
          }
        }
      }
      .icon-con {
        .count-money {
          position: absolute
          left: $rem(40px);
          top: $rem(25px);
          width: $rem(89px);
          height: $rem(117px);
          background url("../../image/master/moneybaby/count-money.png") no-repeat center center;
          background-size: $rem(89px 117px);
        }
        .progressbar {
          position: absolute
          left: $rem(30px);
          top: $rem(30px);
          width: $rem(114px);
          height: $rem(114px);
          background no-repeat center center
          background-size $rem(114px auto);
          .progress {
            color: #ff5f5f;
            .tit {
              font-size: $rem(24px);
              color: #ff5f5f
            }
          }
          .end {
            text-align: center
            line-height: @height;
            font-size: $rem(40px);
            color: #999
          }
          .prepare {
            {$public-center-vertical}
            left: 0;
            width: 100%
            color: #ff5f5f
            text-align: center
            .tits {
              font-size: $rem(24px);
            }
            .conts {
              margin-top: $rem(5px);
              font-size: $rem(32px);
            }
          }
          .progress {
            font-size: $rem(45px);
            text-align: center
            line-height: $rem(114px);
            small {
              font-size: $rem(20px);
            }
          }
        }
      }
    }
  }
}

//我的钱庄
#pageUser {
  background-color $ui-bg-color-gray
  .account-overview-con {
    padding: $rem(30px 0 40px);
    background-color $ui-global-color-main
    color: #fff
    a {
      color: #fff
    }
    .tit {
      font-size: $rem(28px);
    }
    .invest-ing {
      margin: $rem(0 30px);
      .cont {
        margin-top: $rem(25px);
        font-size: $rem(90px);
      }
    }
    .income {
      $box-sizing(border-box)
      padding: $rem(20px 30px 0);
      border-top 1px solid #f9665c
      margin-top: $rem(25px);
      display: table;
      width: 100%;
      table-layout: fixed;
      & > div {
        display: table-cell;
        vertical-align: middle;
        .cont {
          margin-top: $rem(15px);
          font-size: $rem(42px);
        }
      }
    }
    .icon {
      position: absolute
      right: $rem(30px);
      top: $rem(90px);
      font-size: $rem(40px);
    }
  }
  .record-con {
    display: table;
    width: 100%;
    table-layout: fixed;
    margin-top: $rem(30px);
    padding: $rem(30px);
    background-color #fff
    $box-sizing(border-box)
    & > div {
      display: table-cell;
      vertical-align: middle;
      position: relative
      & + div {
        padding-left: $rem(25px);
        border-left: 1px solid #ccc
      }
    }
    .tit {
      font-size: $rem(28px);
    }
    .cont {
      a {
        overflow: hidden
      }
      .time {
        position: absolute
        margin-top: $rem(10px);
        font-size: $rem(24px);
        color: #999
      }
      .amount, .no-data {
        margin-top: $rem(50px);
        font-size: $rem(32px);
      }
      .amount {
        color: #222
      }
      .no-data {
        color #999
      }
    }
    .icon {
      position: absolute
      right: $rem(30px);
      bottom: 0
      $triangle(right bottom, #ccc, 1.237499999845312rem, corner);
    }
  }
  .list-con {
    margin-top: $rem(30px);
    img.envelope {
      vertical-align: middle;
      margin-left: $rem(10px);
      width: $rem(28px);
    }
    .icon-tick-solid {
      font-size: $rem(30px);
      color: #6eb92b
      margin-right: $rem(5px);
    }
  }
}

//更多
#pageMore {
  background-color $ui-bg-color-gray
  .business-card-con {
    margin-top: $rem(20px);
    position: relative
    border: solid #ddd
    border-width 1px 0
    height: $rem(150px);
    $box-sizing(border-box)
    padding: $rem(20px 0 20px 175px);
    background-color #fff
    .main {
      {$public-center-vertical}
      .tit {
        font-size: $rem(34px);
        color: #333
      }
      .cont {
        margin-top: $rem(15px);
        font-size: $rem(24px);
        color: #999
        .icon {
          font-size: $rem(25px);
          color: #78be3a
        }
      }
    }
    .icon-arrow-right {
      {$public-center-vertical}
      right: $rem(30px);
      color: #bbb
      font-size: $rem(30px);
    }
    .user-portrait {
      {$public-center-vertical}
      left: $rem(30px);
      width: $rem(110px);
      height: $rem(110px);
      overflow: hidden
      img {
        width: 100%
      }
    }
  }
  .list-con {
    .ui-list-more {
      margin-top: $rem(20px);
      border: solid #ddd
      border-width: 1px 0
    }
  }
  .contact-con {
    margin-top: $rem(50px);
    width: 100%
    text-align: center
    color: #999
    .tel {
      position: relative
      display: inline-block
      border: 1px solid #d2d2d2
      font-size: $rem(34px);
      line-height: $rem(50px);
      border-radius $rem(30px);
      padding: $rem(0 25px 0 50px);
      .icon {
        {$public-center-vertical}
        left: $rem(15px);
        color: $ui-global-color-main;
        font-size: $rem(30px);
        margin-right: $rem(10px);
      }
    }
    .time {
      margin-top: $rem(15px);
      font-size: $rem(22px);
    }
  }
}

//我的个人中心
#pageMyCenter {
  background-color: #f6f6f6
  .my-info {
    margin-top: $rem(20px);
    border: solid #ddd
    border-width 1px 0
    background #fff url('../../image/master/seal/certification.png') no-repeat right bottom;
    background-size $rem(224px auto)
    .info-box {
      padding: $rem(20px 30px)
      width: 100%;
      $box-sizing(border-box);
      li {
        font-size: $rem(28px);
        color: $ui-font-color-gray-dark;
        line-height: $rem(55px);
        span {
          color: #999;
          display: inline-block;
          width: $rem(110px);
        }
      }
    }
  }
  .operate {
    margin-top: $rem(20px);
    border: solid #ddd;
    border-width: 1px 0;
    background-color: #fff;
    a {
      height: $rem(100px);
      display: block;
      line-height: $rem(100px);
      margin-left: $rem(30px);
      font-size: $rem(28px);
      color: #333;
      position: relative;
      border-bottom: solid 1px #ddd;
      i {
        {$public-center-vertical}
        color: #bbb;
        right: $rem(30px);
      }
    }
    a:last-child {
      border-width 0
    }
  }
  .quit {
    margin-top: $rem(20px);
    border: solid #ddd;
    border-width: 1px 0;
    background-color: #fff;
    text-align: center;
    height: $rem(97px);
    line-height: @height;
    font-size: $rem(32px);
    color: #333;
  }
  .approve {
    background-image: none !important;
    position: relative;
    .go-approve {
      {$public-center-vertical}
      right: $rem(30px);
      font-size: $rem(28px);
      color: #007aff;
    }
  }
}

//--------------------------------------------------------【登录注册】
.ui-form {
  .voice-tips {
    border-radius $rem(8px);
    background-color #eee
    font-size: $rem(24px);
    line-height: $rem(80px);
    text-align: center
    color: $ui-font-color-gray-dark;
    margin-top: $rem(20px) !important
    a {
      display: inline
      color: $ui-font-color-blue;
    }
  }
}

//--------------------------------------------------------【产品详情页】

//产品详情
#pageProDetails {
  .viewport {
    margin-bottom: $rem(100px);
  }
  //链接块右下角的icon图标
  $link-block-icon =@block{
    display: block;
    position: relative
    &:after {
      right: 0;
      bottom: 0;
      display: inline-block;
      content: '';
      position: absolute;
      width: 0;
      height: 0;
      border: size = (unit(16px /$default-font-size, rem) / 2) solid $ui-global-color-main;
      border-top-color: transparent;
      border-left-color: transparent;
      margin-top: - size * 2
      margin-left: - size * 2
    }
  }

  .top-card {
    position: relative
    text-align: center;
    background-color: #fff;
    overflow: hidden
    .main {
      margin-top: $rem(40px);
      line-height: 1;
      .pro-name {
        font-size: $rem(36px);
        color: #333;
      }
      .rate {
        margin-top: $rem(30px);
        .tit {
          font-size: $rem(24px);
          color: $ui-font-color-gray-neutral
        }
        .cont {
          margin-top: $rem(30px);
          font-size: $rem(100px);
          color: $ui-global-color-main
          small {
            font-size: $rem(40px);
            span {
              font-size: $rem(60px)
            }
          }
        }
      }
      .rule {
        margin-top: $rem(20px);
        font-size: $rem(26px);
        line-height: 1
        color: $ui-font-color-gray-neutral;
        .divide {
          display: inline-block
          height: $rem(18px)
          width: 1px;
          background-color #ccc
          margin: $rem(0 25px);
        }
        b {
          font-weight: normal
          color: $ui-font-color-gray-neutral
          padding: $rem(0 10px);
        }
      }
    }
    .other {
      margin-top: $rem(37px);
      background-color: #fff;
      padding-bottom: $rem(5px);
      .info {
        width: $rem(580px)
        margin: 0 auto
        height: $rem(75px)
        font-size: $rem(25px);
        line-height: @height;
        color: $ui-font-color-gray-neutral;
        b {
          font-weight: normal
          font-size: $rem(24px);
          color: $ui-font-color-gray-neutral
          padding: $rem(0 5px);
        }
      }
      .progress {
        display: none
      }
      &.ing {
        margin-top: $rem(50px);
        background-color: transparent;
        .info {
          font-size: $rem(22px);
          .font-color-red {
            color: $ui-global-color-main
            font-weight: bold
          }
          b {
            font-size: $rem(24px);
          }
        }
        .progress {
          position: absolute;
          margin-top: $rem(-80px);
          width: 100%
          text-align: center
          display: block;
          font-size: 0;
          em {
            position: relative
            display: inline-block
            width: $rem(580px);
            height: $rem(3px);
            background-color: #ececec;
            i {
              position: absolute
              left: 0;
              top: 50%
              display: inline-block
              width: 0;
              height: $rem(6px);
              background-color: $ui-global-color-main;
              border-radius: $rem(10px);
              -webkit-transform: translate(0, -50%);
              transform: translate(0, -50%);
            }
          }
        }
      }
    }

    .tag {
      margin $rem(40px) auto 0
      display block
      color #77adf3
      font-size $rem(24px)
      width 55%
      text-align center
      border-radius $rem(40px)
      border 1px solid #77adf3
      line-height $rem(48px)
    }
    .qbb-progress {
      margin-top: $rem(35px)
      height: $rem(80px)
      .progress {
        position: relative
        width: 100%
        text-align: center
        display: block;
        font-size: 0;
        em {
          position: relative
          display: inline-block
          width: $rem(540px);
          height: $rem(3px);
          background-color: #ececec;
          i {
            position: absolute
            left: 0;
            top: 50%
            display: inline-block
            width: 31%;
            height: $rem(3px);
            background-color: $ui-global-color-main;
            border-radius: $rem(10px);
            -webkit-transform: translate(0, -50%);
            transform: translate(0, -50%);
          }
        }
        span {
          position: absolute
          top: 50%
          display: inline-block
          width: $rem(17px)
          height: $rem(17px)
          border-radius 100%
          -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
          &:nth-of-type(1) {
            left: 34%
            background-color $ui-global-color-main
          }
          &:nth-of-type(2) {
            left: 66%
            background-color #ececec
          }
        }
      }
      .info {
        margin: $rem(17px auto 0)
        width: $rem(580px);
        display: table;
        table-layout: fixed;
        span {
          display: table-cell;
          color: $ui-font-color-gray-neutral
          font-size: $rem(22px)
          &:nth-of-type(1) {
            color: $ui-font-color-gray-neutral
          }
          &:nth-of-type(3) {
            text-indent $rem(15px);
          }
        }
      }
    }
  }

  .income-con {
    line-height: 1;
    background-color: $ui-bg-color-gray;
    padding: $rem(15px 0);
    font-size: $rem(24px);
    color: $ui-font-color-gray-neutral;
    & > div {
      padding: $rem(25px 0);
      &.link-block-icon {
        {$link-block-icon}
      }
      & + div {
        position: relative
        &:before {
          content: ' '
          padding-top: $rem(30px)
          margin-top: $rem(-30px)
          line-height 0
          margin-right: $rem(68px)
          border-top: 1px solid $ui-line-color-form-gray
          display: block
        }
        padding-left: $rem(25px)
        padding-right: $rem(25px)
      }
    }
    .tit {
      font-size: $rem(28px);
      color: $ui-font-color-black;
    }
    .explain {
      li {
        position: relative
        padding-left: $rem(68px);
        height: $rem(30px);
        line-height: @height
        & + li {
          margin-top: $rem(10px);
        }
      }
    }
    .million {
      position: relative
      padding-left: $rem(68px);
      p + p {
        margin-top: $rem(15px);
      }
      .font-color-red {
        color: $ui-global-color-main
      }
      .iconfont {
        position: absolute
        left: $rem(22px)
        top: $rem(40px)
      }
    }
    .iconfont {
      position: absolute
      left: $rem(22px);
      top: 50%;
      -webkit-transform: translate(0, -50%);
      transform: translate(0, -50%);
      display: inline-block
      font-size: $rem(38px)
      line-height @font-size;
      color: #fff
      font-style: normal;
      text-align: center;
      border-radius: $rem(3px);
      &.red {
        color: $ui-global-color-main;
      }
      &.orange {
        color: #faa86c;
      }
      &.green {
        color: #6eb92b;
      }
      &.blue {
        color: #6693b6;
      }
    }
